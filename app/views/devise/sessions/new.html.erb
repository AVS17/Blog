<div class="flex items-center justify-center mt-10">
  <div class="w-1/3 px-8 pt-6 pb-8 mb-4 bg-gray-100 rounded shadow-md">
    <h2 class="block text-xl font-bold text-center text-blue-500">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="block mb-2">
        <%= f.label :email , class: 'block text-gray-700 text-sm font-bold mb-2'%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="block mb-2">
        <%= f.label :password , class: 'block text-gray-700 text-sm font-bold mb-2'%>
        <%= f.password_field :password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="block mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , class: 'text-gray-700 text-base font-normal mb-2'%>
        </div>
      <% end %>

      <div class="block mb-2">
        <%= f.submit "Log in", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full' %>
      </div>
    <% end %>
    <div class="flex justify-between">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
