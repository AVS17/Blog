<div class="flex flex-col items-center justify-center w-2/3 p-5 mx-auto mt-10 shadow-lg">
  <div class="mb-4">
    <h1 class="text-3xl font-bold"><%= @article.title %></h1>
    <p class="text-base text-left ">Escrito por: <strong><%=@article.user.email%></strong></p>
  </div>
  <div class="w-full mb-8">
    <p class="text-gray-600"><%= @article.content %></p>
  </div>
  <div class="grid grid-cols-4 gap-2">
    <p class="text-base font-bold text-gray-600">Tags</p>
    <%  @article.categories.each do |category| %>
      <span class="rounded-full bg-[<%= category.color %>] text-center p-1 my-2">
        <%= link_to category.title, category, class: 'text-white hover:underline' %>
      </span>
    <% end %>
  </div>
  <div>
    <%= button_to "Delete Article", article_path(@article), method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
  </div>
</div>
    


