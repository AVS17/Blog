<%= form_with(model: @article, local: true, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4') do |form|%>
    <div class="block mb-2">
        <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2'%>
        <%= form.text_field :title , class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'%>
    </div>

    <div class="block mb-2">
        <%= form.label :category_elements, class: 'block text-gray-700 text-sm font-bold mb-2'%>
        <div class="grid grid-cols-3 gap-6">
            <% @categories.each do |category|%>
                <label for="" class="text-base font-bold">
                    <%= form.check_box :category_elements, {multiple: true}, category.id, nil%>
                    <%= category.title %>
                </label>
            <% end %>
        </div>
    </div>

    <div class="block mb-2">
        <%= form.label :content , class: 'block text-gray-700 text-sm font-bold mb-2'%>
        <%= form.rich_text_area :content %>
    </div>

    <div>
        <%= form.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'%>
    </div>
<% end %>