<div class="flex flex-col items-center justify-center w-2/3 p-5 mx-auto mt-10 shadow-lg">
  <h1 class="text-xl font-bold text-center text-blue-500">Editar Usuario</h1>
  <%= image_tag url_for(current_user.avatar), class: 'rounded-full h-50 w-50 max-w-200 max-h-80' %>
  <%= form_with(model: current_user, local: true) do |f| %>
    <div class="block mb-2">
      <%=f.label :avatar,class: 'block text-gray-700 text-sm font-bold mb-2'%>
      <%= f.file_field :avatar, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'%>
    </div>
    <div class="block mb-2">
      <%= f.submit "Save", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'%>
    </div>
  <% end%>
</div>